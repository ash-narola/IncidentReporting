<div class="card">
  <div class="card-body">
    <%= form_with(model: managers_incident_recording, url: url, local: true) do |form| %>
      <% if managers_incident_recording.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(managers_incident_recording.errors.count, "error") %> prohibited this incident from being saved:</h2>

          <ul>
            <% managers_incident_recording.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="row">
        <div class="col-md-4 pr-1">
          <div class="form-group">
            <%= form.label :user_id, 'Report' %>
            <%= form.collection_select :user_id, selected_users, :id, :email, {}, { class: 'form-control' } %>
          </div>
        </div>
        <div class="col-md-4 px-1">
          <div class="form-group">
            <%= form.label :degree %>
            <%= form.select :degree, IncidentRecording.degrees.keys.map { |key| [key.humanize, key] }, {}, { class: 'form-control' } %>
          </div>
        </div>
        <div class="col-md-4 pl-1">
          <div class="form-group">
            <%= form.label :incident_date %>
            <%= form.text_field :incident_date, class: 'form-control datepicker' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= form.label :message %>
            <%= form.text_area :message, class: 'form-control' %>
          </div>
        </div>
      </div>
      <%= form.submit "Save", class: "btn btn-info btn-fill pull-right" %>
      <div class="clearfix"></div>
    <% end %>
  </div>
</div>
