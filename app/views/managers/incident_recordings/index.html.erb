<%= content_for :title, 'All Reported Incidents' %>
<%= content_for :incidents_class, 'active' %>

<div class="card strpied-tabled-with-hover">
  <div class="card-header ">
    <!-- <h4 class="card-title">Striped Table with Hover</h4> -->
    <!-- <p class="card-category">Here is a subtitle for this table</p> -->
  </div>
  <div class="card-body table-full-width table-responsive">
    <table class="table table-hover table-striped">
      <thead>
        <th>Review type</th>
        <th>Incident date</th>
        <th>Reported Member</th>
        <th>Message</th>
        <th>Actions</th>
        <th>Actions</th>
      </thead>
      <tbody>
        <% @managers_incident_recordings.each do |managers_incident_recording| %>
        <tr>
          <td><%= managers_incident_recording.degree.humanize %></td>
          <td><%= managers_incident_recording.incident_date %></td>
          <td><%= managers_incident_recording.message.truncate(25) %></td>
          <td><%= managers_incident_recording.user.email %></td>
          <td><%= link_to 'Edit', edit_managers_incident_recording_path(managers_incident_recording) %></td>
          <td><%= link_to 'Destroy', managers_incident_recording_path(managers_incident_recording), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

